# Qwen3-TTS Server Configuration
# Copy this file to .env and modify as needed

# Server Settings
TTS_HOST=0.0.0.0
TTS_PORT=8000

# Device Configuration
TTS_DEVICE=cuda:0
TTS_DTYPE=bfloat16

# Performance Settings
TTS_USE_FLASH_ATTENTION=true
TTS_USE_TORCH_COMPILE=false
TTS_USE_WARMUP=false

# Default Model
# Options: base_0.6b, base_1.7b
TTS_DEFAULT_MODEL=base_0.6b

# Model Paths (update for your environment)
# Leave empty to auto-download from Hugging Face
MODEL_0_6B_BASE=
MODEL_1_7B_BASE=
